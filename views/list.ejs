<%- include('header') -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">

    <% for (content of newListItems) { %>
      <div class="item">
        <input type="checkbox">
        <p><%= content %></p>
      </div>
    <% } %>

  <form action="/" method="POST">
    <input type="text" name="newItem" placeholder="New item" autocomplete="off">
    <button type="submit" name="button" value=<% s= listTitle %> >+</button>
  </form>
</div>

<%- include('footer') -%>

